  "packageManager": "pnpm@8.7.5",
  "scripts": {
    "dev": "cross-env NODE_ENV=development HMR=true tsc --noEmit && webpack serve",
    "build": "cross-env NODE_ENV=development tsc --noEmit && webpack",
    "test": "jest",
    "lint": "pnpm type-check && pnpm lint:eslint && pnpm lint:prettier",
