  "packageManager": "pnpm@7.32.0",
  "scripts": {
    "dev": "cross-env NODE_ENV=development HMR=true tsc --noEmit && webpack serve",
    "build": "cross-env NODE_ENV=development tsc --noEmit && webpack",
    "test": "jest",
    "lint": "pnpm type-check && pnpm lint:eslint && pnpm lint:prettier",
    "lint:fix": "pnpm lint:eslint:fix && pnpm lint:prettier:fix",
    "lint:eslint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint:eslint:fix": "eslint --fix '**/*.{js,jsx,ts,tsx}'",
    "lint:prettier": "prettier --check '**/*.{js,jsx,ts,tsx,md,yml,yaml,html,json}'",
    "lint:prettier:fix": "prettier --write '**/*.{js,jsx,ts,tsx,md,yml,yaml,html,json}'",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "core-js": "3.30.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
